body
  background url('/images/wood_nortago.jpg')
  color white
  font-family helvetica

.page
  margin 50px 0
  h1, h2, h3, p
    padding 0
    margin 0
  label, input
    padding 2px
.page-header
  padding: 50px 55px 30px;
  position: relative;
  height 20px
  border: 1px solid #B5B5B5;
  border-bottom 1px solid #DFE8EC
  background: white;
  background-size: 100% 30px;
  font: 24px 'AmericanTypewriter', Cambria, Georgia
  color: #282625
  margin: 0 auto
  width: 600px
  line-height:30px
  &:after
    content ''
    border-left 1px solid #F8D3D3
    position absolute
    top 0
    left 39px
    bottom 0
.page-body
  padding: 3px 55px 30px;
  position: relative;
  border: 1px solid #B5B5B5;
  border-top none
  background: white;
  background: -webkit-linear-gradient(top, #DFE8EC 0%, white 8%) 0 57px;
  background: -moz-linear-gradient(top, #DFE8EC 0%, white 8%) 0 57px;
  background: linear-gradient(top, #DFE8EC 0%, white 8%) 0 57px;
  -webkit-background-size: 100% 30px;
  -moz-background-size: 100% 30px;
  -ms-background-size: 100% 30px;
  background-size: 100% 30px;
  font: 16px 'AmericanTypewriter', Cambria, Georgia
  color: #282625
  margin: 0 auto
  width: 600px
  line-height:30px
  &:after
    content ''
    border-left 1px solid #F8D3D3
    position absolute
    top 0
    left 39px
    bottom 0

.notecard
  transition: all 0.5s
  -webkit-transition: all 0.5s
  h1, h2, h3, h4
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding 0
    margin 0
  p
    padding 0
    margin 0
  text-align left
  padding: 0 30px 30px;
  position: relative
  border: 1px solid #B5B5B5;
  background: white;
  background: -webkit-linear-gradient(top, #DFE8EC 0%, white 8%) 0 57px;
  background: -moz-linear-gradient(top, #DFE8EC 0%, white 8%) 0 57px;
  background: linear-gradient(top, #DFE8EC 0%, white 8%) 0 57px;
  -webkit-background-size: 100% 30px;
  -moz-background-size: 100% 30px;
  -ms-background-size: 100% 30px;
  background-size: 100% 30px;
  font: 16px 'AmericanTypewriter', Cambria, Georgia
  color: #282625
  width 250px
  height 150px
  margin 10px 20px
  display inline-block
  line-height:30px
  vertical-align top
  & p
    margin 0
  &.category
    cursor pointer
    z-index 1
  &:after
    content ''
    border-top 1px solid #F8D3D3
    position absolute
    top 27px
    right 0
    left 0
.notecard-wrapper
  text-align center

form
  width 250px
  margin 0 25px
  display inline-block
input
  float right
  width 150px
  background none
  border 1px dashed black
  font 16px 'AmericanTypewriter', Cambria, Georgia
  &[type='submit']
    width 156px
ul
  margin 0
.group
  transition: height 0.5s
  -webkit-transition: height 0.5s
  position relative
  display block
