extends layout
block content
  div.page
    -if(game.finished || !game.sentence)
      div.page-header
    div.page-body
      -if(game.finished)
        p= game.content
      -else
        p= game.sentence
        form(action='/game', method='post').game
          input(type='hidden', name='gameId', value=game.id)
          textarea(name='sentence')
          input(type='submit', value='submit')
