doctype 5
html
  head
    title story game
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/libs/fastclick.min.js')
    script(src='/scripts/scripts.js')
  body
    -if(user)
      div.heading
        div.title
          h1 stories
        div.nav-container
          a(href='/games').nav-link
            h2 games
          a(href='/profile').nav-link
            h2 profile
          a(href='/newgame').nav-link
            h2 new game
        div.user
          h3= 'logged in as ' + user.username
          a(href='/signout')
            h3 sign out
    block content
