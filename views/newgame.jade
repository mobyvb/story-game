form(action='./game/new', method='post')
  h2 New game
  -if(errors && errors.newgame)
    -for(var i=0; i<errors.newgame.length; i++)
      div.alert.alert-error
        a.close(data-dismiss='alert') x
        span= errors.newgame[i]
  div.form-group
    label Select players for this game
    div.checkbox
      -user.friends.forEach(function(friend) {
        label
          input(type='checkbox', name='friends', value=friend)
          =friend
      -})
  div.form-group
    label Number of turns per player
    input.form-control(type='number', name='turnsPer', min='1', id='turnsPer', required)

  input.btn.btn-lg.btn-primary(type='submit')