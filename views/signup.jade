form(action='./signup', method='post')
  h2 create account
  -if(errors && errors.signup)
    -for(var i=0; i<errors.signup.length; i++)
      div.error= errors.signup[i]
  -if(success && success.signup)
    -for(var i=0; i<success.signup.length; i++)
      div.success= success.signup[i]
  div.group
    label username:
    input(type='text', name='username', required)
  div.group
    label password:
    input(type='password', name='password', required)
  div.group
    label confirm:
    input(type='password', name='confirmPassword', required)
  input(type='submit', value='submit')